<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @photo.image %>);">
    <% if user_signed_in? && current_user.id == @photo.user_id %>
      <div class="more">
        <span><%= image_tag '下矢印.jpeg' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_photo_path(@photo.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', photo_path(@photo.id), method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <p><%= @photo.text %></p>
    <span class="name">
      <a href="/users/<%= @photo.user.id %>">
        <span>投稿者</span><%= @photo.user.nickname %>
      </a>
    </span>
  </div>
</div>